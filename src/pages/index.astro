---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { caseStudies } from '../data/caseStudies';

// Get the first two case studies for the featured section
const featuredProjects = caseStudies.slice(0, 2);
---

<Layout title="James — UX/UI Designer & Product Manager">
  <section class="hero min-h-[100dvh] max-h-[100dvh] flex md:items-start items-center relative overflow-hidden">
    <video 
      autoplay 
      loop 
      muted 
      playsinline 
      class="absolute inset-0 w-full h-full object-cover"
      preload="auto"
    >
      <source src="/IMG_2879.webm" type="video/webm">
    </video>
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="container relative z-10 md:pt-[15vh]">
      <div class="max-w-2xl">
        <h1 class="text-5xl md:text-7xl font-display font-medium leading-none mb-6 text-white">
          Hi, I'm James — UX/UI Designer & Product Manager.
        </h1>
        <p class="text-xl text-white/80 mb-10 max-w-xl">
          I create intuitive, beautiful user interfaces and lead product strategy to craft compelling digital experiences.
        </p>
        <div class="flex flex-wrap gap-4">
          <Button href="/work" variant="primary" class="rounded-full inline-flex items-center">
            <span>View Work</span>
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="20" 
              height="20" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </Button>
          <Button href="mailto:jamesmolyneuxbirch@gmail.com" variant="secondary" class="rounded-full inline-flex items-center">
            <span>Contact Me</span>
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="20" 
              height="20" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </Button>
        </div>
      </div>
    </div>

    <div class="container absolute bottom-8 right-0 z-10">
      <div class="flex justify-end">
        <div class="hidden md:flex flex-col gap-4 text-white text-right">
          <a href="https://www.linkedin.com/in/jamesmolyneuxbirch" class="hover:text-white/80 transition-colors" target="_blank" rel="noopener">LinkedIn</a>
          <a href="https://dribbble.com/jamesmolyneuxbirch" class="hover:text-white/80 transition-colors" target="_blank" rel="noopener">Dribbble</a>
          <a href="mailto:jamesmolyneuxbirch@gmail.com" class="hover:text-white/80 transition-colors">Email</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-16">
        <h2 class="text-3xl md:text-4xl font-display font-medium">Featured Projects</h2>
        <div class="hidden md:block">
          <Button href="/work" variant="outline" class="rounded-full bg-gray-100 text-primary hover:bg-transparent hover:border-primary hover:text-black inline-flex items-center py-3 px-6">
            <span>View All Projects</span>
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="20" 
              height="20" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </Button>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {featuredProjects.map(project => (
          <a href={`/work/${project.slug}`} class="case-study-card">
            <div class="img-hover aspect-[4/3] mb-5 rounded-[1.25rem] overflow-hidden">
              <img 
                src={project.thumbnail} 
                alt={project.title} 
                class="w-full h-full object-cover"
              />
            </div>
            <p class="text-muted mb-2">{project.categories.join(', ')}</p>
            <h3 class="text-xl font-display font-medium">{project.title}</h3>
          </a>
        ))}
      </div>
      
      <div class="flex justify-center mt-12 md:hidden">
        <Button href="/work" variant="outline" class="rounded-full bg-gray-100 text-primary hover:bg-transparent hover:border-primary hover:text-black inline-flex items-center py-3 px-6">
          <span>View All Projects</span>
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            width="20" 
            height="20" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
          >
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </Button>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-16">
        <h2 class="text-3xl md:text-4xl font-display font-medium">Photography</h2>
        <div class="hidden md:block">
          <Button href="/photography" variant="outline" class="rounded-full bg-gray-100 text-primary hover:bg-transparent hover:border-primary hover:text-black inline-flex items-center py-3 px-6">
            <span>View Gallery</span>
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="20" 
              height="20" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </Button>
        </div>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <div class="img-hover rounded-[1.25rem] overflow-hidden">
          <img 
            src="/src/assets/mountainrange2.webp" 
            alt="Mountain range landscape photography" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="img-hover rounded-[1.25rem] overflow-hidden">
          <img 
            src="/src/assets/temple1.webp" 
            alt="Temple architecture photography" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="img-hover rounded-[1.25rem] overflow-hidden">
          <img 
            src="/src/assets/mountainrange19.webp" 
            alt="Mountain landscape photography" 
            class="w-full h-full object-cover"
          />
        </div>
      </div>
      
      <div class="flex justify-center mt-12 md:hidden">
        <Button href="/photography" variant="outline" class="rounded-full bg-gray-100 text-primary hover:bg-transparent hover:border-primary hover:text-black inline-flex items-center py-3 px-6">
          <span>View Gallery</span>
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            width="20" 
            height="20" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
          >
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .case-study-card {
    @apply block transition-all duration-300;
  }
  
  .case-study-card:hover {
    @apply translate-y-[-5px];
  }
</style>