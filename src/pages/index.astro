---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout title="James — UX/UI Designer & Product Manager">
  <section class="hero min-h-[100dvh] max-h-[100dvh] flex md:items-start items-center relative overflow-hidden">
    <video 
      autoplay 
      loop 
      muted 
      playsinline 
      class="absolute inset-0 w-full h-full object-cover"
      preload="auto"
    >
      <source src="https://player.vimeo.com/progressive_redirect/playback/517088067/rendition/1080p/file.mp4?loc=external&signature=64c33f62974656c1b53f5ae83c3656f0f8d2546c4c3f3c3c3a8944e2a9cd6430" type="video/mp4">
    </video>
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="container relative z-10 md:pt-[15vh]">
      <div class="max-w-2xl">
        <h1 class="text-5xl md:text-7xl font-display font-medium leading-none mb-6 text-white">
          Hi, I'm James — UX/UI Designer & Product Manager.
        </h1>
        <p class="text-xl text-white/80 mb-10 max-w-xl">
          I create intuitive, beautiful user interfaces and lead product strategy to craft compelling digital experiences.
        </p>
        <div class="flex flex-wrap gap-4">
          <Button href="/work" variant="primary" class="rounded-full inline-flex items-center">
            <span>View Work</span>
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="20" 
              height="20" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </Button>
          <Button href="mailto:james@yourdomain.com" variant="secondary" class="rounded-full inline-flex items-center">
            <span>Contact Me</span>
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="20" 
              height="20" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </Button>
        </div>
      </div>
    </div>

    <div class="container absolute bottom-8 right-0 z-10">
      <div class="flex justify-end">
        <div class="hidden md:flex flex-col gap-4 text-white">
          <a href="https://linkedin.com/jamesmb" class="hover:text-white/80 transition-colors" target="_blank" rel="noopener">LinkedIn</a>
          <a href="https://dribbble.com/jamesmb" class="hover:text-white/80 transition-colors" target="_blank" rel="noopener">Dribbble</a>
          <a href="mailto:james@yourdomain.com" class="hover:text-white/80 transition-colors">Email</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-accent">
    <div class="container">
      <h2 class="text-3xl md:text-4xl font-display font-medium mb-16">Featured Projects</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <a href="/work/project-1" class="case-study-card">
          <div class="img-hover aspect-[4/3] mb-5">
            <img 
              src="https://images.pexels.com/photos/1779487/pexels-photo-1779487.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
              alt="Finance App UI Design" 
              class="w-full h-full object-cover"
            />
          </div>
          <h3 class="text-xl font-display font-medium">Finance App Redesign</h3>
          <p class="text-muted mt-2">UX/UI Design, Product Strategy</p>
        </a>
        
        <a href="/work/project-2" class="case-study-card">
          <div class="img-hover aspect-[4/3] mb-5">
            <img 
              src="https://images.pexels.com/photos/196644/pexels-photo-196644.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
              alt="E-commerce Platform" 
              class="w-full h-full object-cover"
            />
          </div>
          <h3 class="text-xl font-display font-medium">E-commerce Platform</h3>
          <p class="text-muted mt-2">UX Research, UI Design, Product Management</p>
        </a>
      </div>
      
      <div class="flex justify-center mt-12">
        <Button href="/work" variant="secondary">View All Projects</Button>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2 class="text-3xl md:text-4xl font-display font-medium mb-16">Photography</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <div class="img-hover">
          <img 
            src="https://images.pexels.com/photos/1738986/pexels-photo-1738986.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="Photography sample" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="img-hover">
          <img 
            src="https://images.pexels.com/photos/1274260/pexels-photo-1274260.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="Photography sample" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="img-hover">
          <img 
            src="https://images.pexels.com/photos/3075993/pexels-photo-3075993.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="Photography sample" 
            class="w-full h-full object-cover"
          />
        </div>
      </div>
      
      <div class="flex justify-center mt-12">
        <Button href="/photography" variant="secondary">View Gallery</Button>
      </div>
    </div>
  </section>

  <section class="section bg-primary text-white">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-display font-medium mb-6">Let's Work Together</h2>
        <p class="text-xl mb-10">
          I'm always open to discussing product design work or partnership opportunities.
        </p>
        <Button href="mailto:james@yourdomain.com" variant="outline-white">Get In Touch</Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .case-study-card {
    @apply block transition-all duration-300;
  }
  
  .case-study-card:hover {
    @apply translate-y-[-5px];
  }
</style>