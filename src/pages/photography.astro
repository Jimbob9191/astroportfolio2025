---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout title="Photography | James â€” UX/UI Designer & Product Manager">
  <section class="section">
    <div class="container">
      <div class="flex items-center justify-center min-h-[70vh]">
        <div class="text-center max-w-2xl">
          <h1 class="text-4xl md:text-6xl font-display font-medium mb-8">Photography</h1>
          <div class="w-24 h-px bg-gray-300 mx-auto mb-8"></div>
          <h2 class="text-2xl md:text-3xl font-display font-medium mb-6 text-secondary">Coming Soon</h2>
          <p class="text-lg text-muted mb-10 max-w-lg mx-auto leading-relaxed">
            I'm currently curating a collection of my photography work. This gallery will showcase 
            landscapes, architecture, and travel photography from my adventures around the world.
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <Button href="/work" variant="outline" class="rounded-full bg-gray-100 text-primary hover:bg-transparent hover:border-primary hover:text-black inline-flex items-center py-3 px-6">
              <span>View My Design Work</span>
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                width="20" 
                height="20" 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="2" 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
              >
                <line x1="7" y1="17" x2="17" y2="7"></line>
                <polyline points="7 7 17 7 17 17"></polyline>
              </svg>
            </Button>
            <Button href="mailto:jamesmolyneuxbirch@gmail.com" variant="outline" class="rounded-full bg-transparent text-primary hover:bg-primary hover:text-white border-primary inline-flex items-center py-3 px-6">
              <span>Get In Touch</span>
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                width="20" 
                height="20" 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="2" 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                class="ml-2 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1"
              >
                <line x1="7" y1="17" x2="17" y2="7"></line>
                <polyline points="7 7 17 7 17 17"></polyline>
              </svg>
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Add subtle animation to the coming soon text */
  h2 {
    animation: fadeIn 2s ease-in-out;
  }
  
  @keyframes fadeIn {
    0% { opacity: 0; transform: translateY(10px); }
    100% { opacity: 1; transform: translateY(0); }
  }
</style>